@model FFFWebApplication.Question

@{
    ViewBag.Title = "Delete";
}

<div class="edit-pages" id="edit-pages">
    <h2>Delete</h2>

    <h3 style="color: #d2113d;">Are you sure you want to delete this?</h3>
    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Question
            </dt>

            <dd>
                @Html.DisplayFor(model => model.QuestionDesc)
            </dd>

            <dt>
                Answer #1
            </dt>

            <dd>
                @Html.DisplayFor(model => model.QuestionOptionA)
            </dd>

            <dt>
                Answer #2
            </dt>

            <dd>
                @Html.DisplayFor(model => model.QuestionOptionB)
            </dd>

            <dt>
                Answer #3
            </dt>

            <dd>
                @Html.DisplayFor(model => model.QuestionOptionC)
            </dd>

            <dt>
                Answer #4
            </dt>

            <dd>
                @Html.DisplayFor(model => model.QuestionOptionD)
            </dd>

            <dt>
                Question Set (1-3)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.QuestionSet)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                @Html.ActionLink("< Back to List", "Index") |
                <input type="submit" value="Delete" class="btn btn-danger" />

            </div>
        }
    </div>
</div>